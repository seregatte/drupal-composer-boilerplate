{
  "name": "seregatte/drupal-composer-boilerplate",
  "type": "project",
  "description": "Composer template for Drupal projects",
  "license": "GPL-2.0+",
  "repositories": [
  {
    "type": "composer",
    "url": "https://packagist.drupal-composer.org"
  },
  {
    "type": "package",
    "package": {
      "name":"seregatte/drupal-docker-boilerplate",
      "version": "8.0.2",
      "type": "library",
      "dist": {
        "url": "https://github.com/seregatte/drupal-docker-boilerplate/archive/master.zip",
        "type": "zip"
      }
    }
  }
  ],
  "require": {
    "composer/installers": "^1.0.20",
    "drupal-composer/drupal-scaffold": "^2.0.1",
    "cweagans/composer-patches": "~1.0",
    "seregatte/drupal-docker-boilerplate": "*",
    "drupal/core": "~8.0"
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "require-dev": {
    "behat/mink": "~1.7",
    "behat/mink-goutte-driver": "~1.2",
    "jcalderonzumba/gastonjs": "~1.0.2",
    "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
    "mikey179/vfsStream": "~1.2",
    "phpunit/phpunit": "~4.8",
    "symfony/css-selector": "~2.8"
  },
  "scripts": {
    "post-create-project-cmd": [
      "rm README.md LICENSE",
      "make set_variable DRUPAL_VERSION=8"
    ],
    "pre-install-cmd": [
      "DrupalComposerBoilerplate\\composer\\ScriptHandler::checkComposerVersion"
    ],
    "pre-update-cmd": [
      "DrupalComposerBoilerplate\\composer\\ScriptHandler::checkComposerVersion"
    ],
    "post-install-cmd": [
      "DrupalComposerBoilerplate\\composer\\ScriptHandler::createRequiredFiles"
    ],
    "post-update-cmd": [
      "DrupalComposerBoilerplate\\composer\\ScriptHandler::createRequiredFiles",
      "cp -Rf vendor/seregatte/drupal-docker-boilerplate/infrastructure .",
      "cp -Rf vendor/seregatte/drupal-docker-boilerplate/Makefile .",
      "patch -p0 < resources/patches/setup.patch",
      "patch -p0 < resources/patches/environment.patch"
    ],
    "drupal-scaffold": [
      "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
    ]
  },
  "config": {
    "vendor-dir": "vendor",
    "secure-http": false
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "classmap": [
      "resources/scripts/composer/ScriptHandler.php"
    ]
  },
  "extra": {
    "installer-paths": {
      "public_html/core": ["type:drupal-core"],
      "public_html/libraries/{$name}": ["type:drupal-library"],
      "public_html/modules/contrib/{$name}": ["type:drupal-module"],
      "public_html/profiles/contrib/{$name}": ["type:drupal-profile"],
      "public_html/themes/contrib/{$name}": ["type:drupal-theme"]
    }
  }
}
